import QtQuick 2.15

Text {
    x: 654
    y: 112
    width: 630
    height: 169
    color: "#ffffff"
    text: qsTr("Secure Transact")
    font.letterSpacing: 4
    font.pixelSize: 80
    horizontalAlignment: Text.AlignHCenter
    lineHeight: 1
    font.wordSpacing: 1
    font.weight: Font.Medium
    font.bold: false
    style: Text.Normal
    font.family: "FontAwesome"

    ColorAnimation {
        id: colorAnimation
        target: appName
        property: ""
        loops: Animation.Infinite
        to: "#53ff74"
        from: "#ffffff"
    }

    NumberAnimation {
        id: fadeInAnimation
        target: appName
        properties: "opacity"
        duration: 500
        to: 1
        from: 0
    }

    Component.onCompleted: {
        fadeInAnimation.start();
        colorAnimation.start();
    }
}
